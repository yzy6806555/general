#include<stdio.h>
#include <iostream>
using namespace std;


int binary_search(int array[],int n,int value)
{
    //write your code here
    int l=0,r=n-1;
    int m=0;
    while(l<=r)
    {
         m=(l+r)/2;

        if(array[m]<value)
        {

            l=m+1;
        }else
        {
            r=m-1;
        }
    }
  //  return -1;
    return (r==n-1)? -1:r;
}


int main()
{
    //二分查找最左端
    int a[]={1,2,2,4,5,5,7,7,8,8,8};
    cout<<sizeof(a)/4<<endl;
    cout<<binary_search(a,sizeof(a)/4,24);
}

